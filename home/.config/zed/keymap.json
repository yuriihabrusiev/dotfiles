// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      "shift shift": "file_finder::Toggle",
      // "shift shift": "command_palette::Toggle"
    },
  },
  {
    "context": "Editor",
    "bindings": {
      "alt alt": "editor::Hover",

      // "j k": ["workspace::SendKeystrokes", "escape"]
      "cmd-alt-]": "editor::GoToHunk",
      "cmd-alt-[": "editor::GoToPreviousHunk",

      "cmd-k cmd-r": "editor::FindAllReferences",
      "cmd-b": "editor::GoToDefinition",
      "cmd-alt-b": "editor::GoToDefinitionSplit",
      // "cmd-f12": "editor::GoToTypeDefinition",
      // "shift-f12": "editor::GoToImplementation",
      // "alt-cmd-f12": "editor::GoToTypeDefinitionSplit",
      // "ctrl-f12": "editor::GoToDeclaration",
      // "alt-ctrl-f12": "editor::GoToDeclarationSplit"
    },
  },
  {
    "context": "ProjectPanel",
    "use_key_equivalents": true,
    "bindings": {
      "cmd-alt-c": "workspace::CopyRelativePath",
      "alt-cmd-shift-c": "workspace::CopyPath",
    },
  },
]
