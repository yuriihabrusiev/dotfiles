[user]
	name = Yurii Habrusiev
	email = yuriihabrusiev@gmail.com
[alias]
	st = status --short --branch
	ci = commit
	co = checkout
	br = branch
	df = diff
	ds = diff --staged
	ll = log --pretty=clean
	lg = log --pretty=clean --graph
	up = !git pull --rebase --prune $@ && git submodule update --init --recursive
	branches = branch --all
	conflicts = !git ls-files --unmerged | awk '{print $4}' | sort --unique
	save = !git add --all && git commit --message='SAVEPOINT'
	wip = !git add --update && git commit --message="WIP"
	undo = reset --mixed HEAD~1
	amend = commit --all --amend
	wipe = !git add --all && git commit --quiet --message='WIPE SAVEPOINT' && git reset --hard HEAD~1
	cleanup = git branch --merged | grep -v '*' | xargs git branch -d
[core]
	editor = atom --wait
[pretty]
	clean = format:%Cblue%h%Creset %s%C(yellow)%d%Creset %Cgreen%an %ar%Creset
[push]
	default = simple
[credential]
	helper = osxkeychain
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[include]
	path = ~/.gitconfig.local
